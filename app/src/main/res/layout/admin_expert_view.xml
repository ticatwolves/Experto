<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        app:cardCornerRadius="8sp"
        app:cardElevation="6sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
    <RelativeLayout
        android:id="@+id/re"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            android:layout_centerVertical="true"
            app:cardCornerRadius="40dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageView
                android:id="@+id/pimage"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:background="@mipmap/ic_launcher_round"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@+id/view2"
            android:layout_toLeftOf="@+id/deleteuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UnknownId">

            <TextView
                android:id="@+id/expert_name_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/expert_id_show"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/expert_email_show"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:id="@+id/expert_field"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <ImageView
            android:id="@+id/delete_expert"
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/option"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>